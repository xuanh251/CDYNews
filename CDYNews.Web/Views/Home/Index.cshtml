@model CDYNews.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Website tin tức trường cao đẳng Y tế Quảng Nam";
    Layout = "~/Views/Shared/Layouts.cshtml";
}
<div class="topSlideNews">
    <div class="container">
        <div class="topSlideNews-inner">
            <div class="callbacks_container">
                <ul class="rslides callbacks callbacks1" id="slider4">
                    @foreach (var hotPost in Model.BannerPost)
                    {
                        var url = "/" + hotPost.Alias+".p-"+hotPost.ID+".html";
                        <li class="callbacks1_on" style="display: block; float: left; position: relative; opacity: 1; z-index: 2; transition: opacity 500ms ease-in-out;">
                            <div class="topSlideNews-info">
                                <h3>@hotPost.Name</h3>
                                <p>@hotPost.Description</p>
                                <a type="button" class="btnReadHotNews" href="@url">Đọc tiếp</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
           
        </div>
    </div>
</div>

<!--//end-banner-->
<!--/start-main-->
<div class="main-content">
    <div class="container">
        <div class="mag-inner">
            <div class="col-md-8 mag-innert-left">
                <!--business-->
                <div class="business">
                    <h3 class="tittle"><i class="glyphicon glyphicon-certificate"></i>Tin mới đăng</h3>
                    @foreach (var post in Model.LastedPosts)
                    {
                        var url = "/" + post.Alias+".p-"+post.ID+".html";
                        <div class="business-inner">
                            <div class="col-md-6 b-img"><a href="@url"><img style="width:100%" class="img-responsive" src="@post.Image" alt="" /></a></div>
                            <div class="col-md-6 b-text">
                                <h5><a href="@url">@post.Name</a></h5>
                                <h6><i class="glyphicon glyphicon-time"></i>Đăng lúc @post.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")</h6> <div class="icons"><a href="#"><i class="glyphicon glyphicon-user"></i>@post.CreatedBy</a><a href="#"><i class="glyphicon glyphicon-comment"></i>2</a><a href="#"><i class="glyphicon glyphicon-thumbs-up"></i>152</a><a href="#"><i class="glyphicon glyphicon-thumbs-down"></i> 26</a></div>
                                <div class="clearfix"></div>
                                <p>@post.Description</p>
                                <a class="read" href="@url">Đọc tiếp</a>
                            </div>
                            <div class="clearfix"></div>
                            <div class="business-bottom-content">

                            </div>
                        </div>
                    }
                </div>
                <!--//business-->
                <!--//latest-articles-->
                <div class="latest-articles">
                    <h3 class="tittle"><i class="glyphicon glyphicon-file"></i>Bài đọc nhiều nhất</h3>
                    <div class="world-news-grids">
                        @foreach (var item in Model.MostVisitedPost)
                        {
                            var url ="/" + item.Alias+".p-"+item.ID+".html";
                            <div class="world-news-grid">
                                <img src="@item.Image" alt="" />
                                <a href="@url" class="wd">@item.Name</a>
                                <p>@item.Description</p>
                                <a class="read" href="@url">Đọc tiếp</a>
                            </div>
                        }
                        <div class="clearfix"></div>
                    </div>
                </div>
                <!--//articles-->
            </div>
            <div class="col-md-4 mag-inner-right">
                <div class="connect">
                    <h4 class="side">Tin theo chủ đề</h4>
                    <ul class="stay">
                        @foreach (var postCategory in Model.PostCategoriesList)
            {
                var url = "/" + postCategory.Alias + ".pc-" + postCategory.ID + ".html";
                <li class="c5-element-facebook"><a href="@url"><span class="text">@postCategory.Name</span></a></li>
}
                    </ul>
                </div>
                <div class="modern">
                    <h4 class="side">Hình ảnh nhà trường</h4>
                    <div id="example1">
                        <div id="owl-demo" class="owl-carousel text-center">
                            <div class="item">
                                <img class="img-responsive lot" src="~/Assets/client/images/AboutSlide/1.jpg" alt="" />
                            </div>
                            <div class="item">

                                <img class="img-responsive lot" src="~/Assets/client/images/AboutSlide/2.jpg" alt="" />
                            </div>
                            <div class="item">

                                <img class="img-responsive lot" src="~/Assets/client/images/AboutSlide/3.jpg" alt="" />
                            </div>
                            <div class="item">

                                <img class="img-responsive lot" src="~/Assets/client/images/AboutSlide/4.jpg" alt="" />
                            </div>
                        </div>
                    </div>
                    
                </div>
                <div class="modern">
                    <h4 class="side">Bản tin sức khoẻ</h4>
                    <div class="edit-pics">
                        @foreach (var item in Model.HealthPost)
            {
                var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                <div class="editor-pics">
                    <div class="col-md-3 item-pic">
                        <img src="@item.Image" class="img-responsive" alt="" />
                    </div>
                    <div class="col-md-9 item-details">
                        <h5 class="inner two"><a href="@url">@item.Name</a></h5>
                        <div class="td-post-date two"><i class="glyphicon glyphicon-time"></i>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")<a href="#"><i class="glyphicon glyphicon-comment"></i>0 </a></div>
                    </div>
                    <div class="clearfix"></div>
                </div>
}
                    </div>

                </div>
                <!--/start-sign-up-->
                <!--//end-sign-up-->
                <h4 class="side">Bản tin giáo dục</h4>
                <div class="edit-pics">
                    @foreach (var item in Model.EducationPost)
        {
            var url = "/" + item.Alias + ".p-" + item.ID + ".html";
            <div class="editor-pics">
                <div class="col-md-3 item-pic">
                    <img src="@item.Image" class="img-responsive" alt="" />
                </div>
                <div class="col-md-9 item-details">
                    <h5 class="inner two"><a href="@url">@item.Name</a></h5>
                    <div class="td-post-date two"><i class="glyphicon glyphicon-time"></i>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm:ss")<a href="#"><i class="glyphicon glyphicon-comment"></i>0 </a></div>
                </div>
                <div class="clearfix"></div>
            </div>
}


                </div>
                <!--//edit-pics-->
                <!--/top-news-->
                <div class="sign_main">
                    <h4 class="side">Đăng ký nhận tin</h4>
                    <div class="sign_up">
                        <p class="sign">Hãy đăng ký được cập nhật tin tức mới nhất!</p>
                        <form>
                            <input type="text" class="text" value="Họ Tên" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Name';}">
                            <input type="text" class="text" value="Địa chỉ email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Email Address';}">
                            <input type="submit" value="Đăng ký">
                        </form>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <!--//end-mag-inner-->
        <!--/mag-bottom-->
        <div class="mag-bottom">
            <h3 class="tittle bottom"><i class="glyphicon glyphicon-compressed"></i>Khoa học - công nghệ</h3>
            <div class="grid">
                @foreach (var item in Model.SciencePost)
                {
                    var url ="/" + item.Alias+".p-"+item.ID+".html";
                <div class="col-md-4 m-b">
                    <a href="@url"></a> <figure class="effect-layla">
                    <img src="@item.Image" alt="img25" />
                    <figcaption>
                        <h4>Khoa học <span>Công nghệ</span></h4>
                        <a href="#">View more</a>
                    </figcaption>
                    </figure>
                    <div class="m-b-text">
                        <a href="@url" class="wd">@item.Name</a>
                        <p>@item.Description</p>
                        <a class="read" href="@url">Đọc tiếp</a>
                    </div>
                </div>
                }
                <div class="clearfix"></div>
            </div>
        </div>
        <!--//mag-bottom-->
    </div>
</div>

