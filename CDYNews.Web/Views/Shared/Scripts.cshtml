<script>
    var oldPos = 0;
    $(window).scroll(function() {
        var height = $(window).scrollTop();
        if (height>oldPos) {
            $(".box").slideUp();
            oldPos = height;
        }
        else {
            $(".box").slideDown();
            oldPos = height;
        }
        
    })
</script>

