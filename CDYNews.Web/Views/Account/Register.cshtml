        <div class="mag-inner">
            <div class="col-md-8 mag-innert-left">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    if (ViewData["SuccessMsg"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            <strong>Chúc mừng bạn</strong> đã đăng ký thành công!
                            <br />Vui lòng click vào nút đăng nhập ở bên trên để đăng nhập!
                        </div>
                    }
                    @Html.AntiForgeryToken();
                    if (ViewData["ErrorMsg"] != null)
                    {
                        <strong>Có lỗi xảy ra</strong>
                        @Html.ValidationSummary(false, "", new { @class = "error alert alert-danger" })
                    }
                    <div class="account-top heading">
                        <h3>Đăng ký tài khoản mới</h3>
                    </div>
                    <div class="address">
                        <span>Họ tên</span>
                        @Html.TextBoxFor(model => model.FullName)
                    </div>
                    <div class="address">
                        <span>Email</span>
                        @Html.TextBoxFor(model => model.Email)
                    </div>
                    <div class="address">
                        <span>Địa chỉ</span>
                        @Html.TextBoxFor(model => model.Address)
                    </div>
                    <div class="address">
                        <span>Số điện thoại</span>
                        @Html.TextBoxFor(model => model.PhoneNumber)
                    </div>
                    <div class="address">
                        <span>Tên đăng nhập</span>
                        @Html.TextBoxFor(model => model.UserName)
                    </div>
                    <div class="address">
                        <span>Mật khẩu</span>
                        @Html.PasswordFor(model => model.Password)
                    </div>
                    <div class="address">
                        <span>Xác nhận mật khẩu</span>
                        <input id="confirmPass" type="password">
                        <p type="text" id="errorPass"></p>
                    </div>
                    <div class="address">
                        <span>Mã xác nhận</span>
                        @{MvcCaptcha RegisterCaptcha = new MvcCaptcha("RegisterCaptcha");}
                        @Html.Captcha(RegisterCaptcha)
                        @Html.TextBox("CaptchaCode")
                    </div>
                    <div class="address new">
                        <input id="btnRegister" type="submit" value="Đăng ký">
                    </div>
                }
            </div>
